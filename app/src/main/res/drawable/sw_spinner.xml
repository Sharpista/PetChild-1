<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#00CDCDCD" />
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" />
            <size android:width="100dp" android:height="40dp" />
            <stroke android:width="1dp" android:color="#F04F24" />


            <padding android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#00CDCDCD" />

            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" />
            <size android:width="100dp" android:height="40dp" />
            <stroke android:width="1dp" android:color="#F04F24" />
        </shape>
    </item>
</selector>